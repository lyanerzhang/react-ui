{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true,
    "declaration": false,
    "lib": [
      "ES2016",
      "DOM"
    ],
    "baseUrl": "./",
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "jsx": "react",
    "outDir": ".lib",
    "paths": {
      "ly-mobile": ["src/index.ts"],
      "ly-mobile/src/*": ["src/*"],
      "ly-mobile/es/*": ["src/*"],
      "demos": ["src/demos/index.ts"],
      "testing": ["src/tests/testing"]
    },
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "es", "dist", ".dumi"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
  